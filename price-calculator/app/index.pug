  body
    // Content Start

    .table-container
      table
        tr
          th Наименование
          th Кол-во
          th Цена
        tr
          td.name-column Экраны
          td.input-container
            input.screens-input(type="text" value="" placeholder="0")
          td.output-container
            output.screens-output ?
        tr
          td.name-column Сложные экраны
          td.input-container
            input.hard-screens-input(type="text" value="" placeholder="0")
          td.output-container
            output.hard-screens-output ?
        tr
          td.name-column Модальные окна
          td.input-container
            input.modals-input(type="text" value="" placeholder="0")
          td.output-container
            output.modals-output ?
        tr
          td.name-column Адаптация
          td.input-container
            input.adaptive-checkbox(type="checkbox")
          td.output-container
            output.adaptive-output ?
        tr
          td.name-column(colspan="2") Результат
          td.display-none
          td.output-container
            output.result-output ?
      button.calculate-button Calculate
      button.clear-button(disabled) Clear

    // Content End
    // Scripts
    // General
    script(src="libs/jquery/jquery-3.3.1.min.js")
    script(src="js/common.js")
    // Masked Input
    script(src="libs/masked-input/jquery.maskedinput.min.js")
    // PageScroll2id
    script(src="libs/pagescroll2id/jquery.malihu.PageScroll2id.min.js")
